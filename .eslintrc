{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "classes": true,
      "defaultParams": true
    }
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "func-names": 0,
    "eol-last": 0,
    "no-unused-vars": 0,
    "semi": [2, "never"],
    "no-console": 0,
    "arrow-body-style": [0],
    "react/prop-types": [0],
    "no-case-declarations": [0],
    "max-len": [2, {"code": 200, "tabWidth": 2, "ignoreUrls": true}],
    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-double"]
  },
  "plugins": [
    "react"
  ]
}
